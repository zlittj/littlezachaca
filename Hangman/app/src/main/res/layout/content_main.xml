<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zachlittle.android.aca.hangman.MainActivity"
    tools:showIn="@layout/activity_main"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/linLayout"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_height="42dp"
        android:layout_weight=".2">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:layout_height="250dp"
            app:srcCompat="@drawable/gallows"
            android:id="@+id/imageViewGallows"
            android:layout_width="280dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/left_arm"
            android:id="@+id/imageViewLeftArm"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/imageViewHead"
            android:layout_alignLeft="@+id/imageViewLeftLeg"
            android:layout_alignStart="@+id/imageViewLeftLeg"/>

        <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/right_leg"
        android:id="@+id/imageViewRightLeg"
        android:layout_alignBottom="@+id/imageViewGallows"
        android:layout_toRightOf="@+id/imageViewLeftArm"
        android:layout_toEndOf="@+id/imageViewLeftArm"/>

        <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/left_leg"
        android:id="@+id/imageViewLeftLeg"
        android:layout_alignTop="@+id/imageViewRightLeg"
        android:layout_alignRight="@+id/imageViewGallows"
        android:layout_alignEnd="@+id/imageViewGallows"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/head"
            android:id="@+id/imageViewHead"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imageViewBody"
            android:layout_alignStart="@+id/imageViewBody"/>

        <ImageView
            android:layout_width="50dp"
            app:srcCompat="@drawable/body"
            android:id="@+id/imageViewBody"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/imageViewLeftArm"
            android:layout_alignStart="@+id/imageViewLeftArm"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/right_arm"
            android:id="@+id/imageViewRightArm"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageViewLeftArm"
            android:layout_toEndOf="@+id/imageViewLeftArm"/>

    </RelativeLayout>

