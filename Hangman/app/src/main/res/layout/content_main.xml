<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zachlittle.android.aca.hangman.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/left_leg"
        android:layout_marginTop="325dp"
        android:id="@+id/imageViewLeftLeg"
        android:layout_marginStart="135dp"

        android:layout_marginLeft="135dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/right_arm"
        android:layout_marginTop="200dp"
        android:layout_marginStart="195dp"
        android:id="@+id/imageViewRightArm"
        android:layout_marginLeft="195dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/righ_leg"
        android:id="@+id/imageViewRightLeg"
        android:layout_marginTop="320dp"
        android:layout_marginStart="195dp"
        android:layout_marginLeft="195dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/left_arm"
        android:id="@+id/imageViewLeftArm"
        android:layout_marginTop="200dp"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/head"
        android:id="@+id/imageViewHead"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="140dp"/>

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@drawable/body"
        android:id="@+id/imageViewBody"
        android:layout_height="150dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="140dp"/>

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gallows"
        android:id="@+id/imageViewGallows"
        android:layout_width="200dp"
        android:layout_marginBottom="11dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp"
        android:id="@+id/relLayout">

    </RelativeLayout>
</RelativeLayout>
