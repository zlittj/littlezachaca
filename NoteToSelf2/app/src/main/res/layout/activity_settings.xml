<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zachlittle.android.aca.notetoself.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="@string/action_settings"/>

    <TextView
        android:text="@string/anims_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxSound"
        android:layout_marginTop="27dp"
        android:id="@+id/textView3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:text="@string/sound_title"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="@string/rb_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioFast"
            android:layout_weight="1"
            />

        <RadioButton
            android:text="@string/rb_slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioSlow"
            android:layout_weight="1"
            />

        <RadioButton
            android:text="@string/rb_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioNone"
            android:layout_weight="1"
            />
    </RadioGroup>

    <CheckBox
        android:text="@string/sound_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/checkBoxSound"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
