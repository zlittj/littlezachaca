<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zachlittle.android.aca.animationdemo.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textStatus"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7">

            <Button
                android:text="fade in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/btnFadeIn"/>

            <Button
                android:text="left right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLeftRight"
                android:layout_below="@+id/btnZoomIn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/button6"/>

            <Button
                android:text="fade in out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnFadeInOut"/>

            <Button
                android:text="zoom out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnFadeInOut"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnZoomOut"/>

            <Button
                android:text="fade out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnFadeOut"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/btnRightLeft"
                android:layout_alignStart="@+id/btnRightLeft"
                android:layout_marginTop="22dp"/>

            <Button
                android:text="zoom in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnZoomIn"
                android:layout_below="@+id/btnFadeIn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:text="right left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRightLeft"
                android:layout_below="@+id/btnZoomIn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"/>

            <Button
                android:text="top bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTopBottom"
                android:layout_below="@+id/btnZoomOut"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <Button
                android:text="bounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="126dp"
                android:id="@+id/btnBounce"/>

            <Button
                android:text="flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnBounce"
                android:layout_alignLeft="@+id/btnTopBottom"
                android:layout_alignStart="@+id/btnTopBottom"
                android:id="@+id/btnFlash"/>

            <Button
                android:text="rotate left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="78dp"
                android:id="@+id/btnRotateLeft"/>

            <Button
                android:text="rotate right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnRotateLeft"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnRotateRight"/>

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/seekBarSpeed"
                android:max="5000"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/seekBarSpeed"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/textSeekerSpeed"/>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
