<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zachlittle.android.aca.calculator.MainActivity"
    android:background="#263238">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="1"
        android:id="@+id/button"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#616161"
        android:shadowColor="#212121"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="2"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="3"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="4"
        android:id="@+id/button4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="5"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="6"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="8"
        android:id="@+id/button8"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="9"
        android:id="@+id/button9"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="."
        android:id="@+id/buttonPeriod"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="+"
        android:id="@+id/buttonPlus"
        android:layout_above="@+id/buttonDivide"
        android:layout_toLeftOf="@+id/buttonMinus"
        android:layout_toStartOf="@+id/buttonMinus"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="/"
        android:id="@+id/buttonDivide"
        android:layout_above="@+id/buttonClear"
        android:layout_alignLeft="@+id/buttonPlus"
        android:layout_alignStart="@+id/buttonPlus"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="C"
        android:id="@+id/buttonClear"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/buttonDivide"
        android:layout_alignStart="@+id/buttonDivide"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="0"
        android:id="@+id/button0"
        android:layout_alignBottom="@+id/buttonPeriod"
        android:layout_toRightOf="@+id/buttonPeriod"
        android:layout_toEndOf="@+id/buttonPeriod"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:background="#616161"
        android:textColor="#ffffff"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:paddingRight="20dp" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="-"
        android:id="@+id/buttonMinus"
        android:layout_alignTop="@+id/buttonPlus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="*"
        android:id="@+id/buttonMultiply"
        android:layout_below="@+id/buttonPlus"
        android:layout_toRightOf="@+id/buttonPlus"
        android:layout_toEndOf="@+id/buttonPlus"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_layout_width"
        android:layout_height="@dimen/button_layout_width"
        android:text="AC"
        android:id="@+id/buttonAllClear"
        android:layout_below="@+id/buttonDivide"
        android:layout_toRightOf="@+id/buttonDivide"
        android:layout_toEndOf="@+id/buttonDivide"
        android:background="#616161"
        android:textSize="@dimen/text_size_button"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/buttonEquals"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#616161"
        android:textSize="60dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_layout_width"
        android:text="Backspace"
        android:id="@+id/buttonBackspace"
        android:background="#616161"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/button0"
        android:layout_alignLeft="@+id/buttonClear"
        android:layout_alignStart="@+id/buttonClear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:paddingRight="20dp" />


</RelativeLayout>
